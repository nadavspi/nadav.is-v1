---
pageable: true
per_page: 20
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<article>
  <h1 class="text--center">I write about it.</h1>
  <p>I write about music, the web, and the intersection of the two.</p>
</article>

<% if page_articles %>
<section class="archive">
  <ol>
    <% page_articles.each_with_index do |article, i| %>
      <li class="archive__post">
          <p class="title"><%= link_to article.title, article %></p>
          <p class="date sc"><%= article.date.strftime('%b %e, %Y') %></p>
      </li>
    <% end %>
  </ol>
</section>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
